<%- include('layouts/header') -%>

<div id="accionRegistro" class="row">
    <h3 class="col-sm-12">Registrarse</h3>
    <form id="formSignup">
        <div class="row">
            <div class="col">
                <h6>Correo</h6>
                <input class="form-control" type="email" name="username" id="emailPerson"
                    placeholder="Ingresa tu email!" required>
                <h6>Nombre</h6>
                <input class="form-control" type="text" name="name" id="namePerson"
                    placeholder="Ingresa tu nombre!" required>
                <h6>Dirección</h6>
                <input class="form-control" type="text" name="address" id="addressPerson"
                    placeholder="Ingresa tu direccion!" required>
            </div>
            <div class="col">
                <h6>Teléfono</h6>
                <select name="prefix" class="form-control" id="prefixNumber">
                    <% data.forEach(function(unique) { %>
                        <option value="<%= unique.dial_code %>"><%= unique.name %> (<%= unique.dial_code %>)</option>
                    <% }) %>
                </select>
                <input class="form-control" type="tel" name="phone" id="phonePerson"
                    placeholder="Ingresa tu telefono!" required>
                Edad
                <input class="form-control" type="number" name="age" id="agePerson"
                    placeholder="Ingresa tu edad!" required>
            </div>
            <div class="col">
                <h6>Agrega tu foto o avatar</h6>
                <input class="form-control" type="file" name="photo" id="photoPerson">
                <h6>Password</h6>
                <input class="form-control" type="password" name="password" id="passwordPerson"
                    placeholder="Ingresa tu password!" required>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <input class="btn btn-primary col-sm-4" type="button" value="Registrarse" onclick="Registrarse()">
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <a href="/login">Iniciar Sesión</a>
            </div>
        </div>
    </form>
</div>

<%- include('layouts/footer') -%>